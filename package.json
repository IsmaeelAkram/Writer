{
  "name": "Writer",
  "description": "",
  "author": "Ismaeel Akram",
  "version": "1.3.2",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.4.1",
    "cross-env": "6.0.2",
    "docx": "^5.0.2",
    "electron-is-dev": "1.1.0",
    "electron-log": "^3.0.8",
    "emotion": "^10.0.27",
    "prismjs": "^1.19.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "slate": "^0.57.1",
    "slate-history": "^0.57.1",
    "slate-react": "^0.57.1",
    "textract": "^2.5.0"
  },
  "devDependencies": {
    "concurrently": "4.1.2",
    "electromon": "^1.0.10",
    "electron": "9.4.0",
    "electron-builder": "^21.2.0",
    "prettier": "^1.4.4",
    "react-scripts": "3.1.2",
    "wait-on": "3.3.0"
  },
  "build": {
    "appId": "com.ismaeelakram.writer",
    "productName": "Writer",
    "win": {
      "icon": "build/icon.ico"
    },
    "copyright": "Copyright Â© 2020 Ismaeel Akram",
    "files": [
      "build/icon.ico",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "rellinear": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build",
    "dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electromon .\"",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
